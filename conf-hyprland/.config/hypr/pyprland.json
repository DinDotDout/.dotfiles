{
  "pyprland": {
    "plugins": [
      "scratchpads",
      "monitors",
      "workspaces_follow_focus"
    ]
  },
  "scratchpads": {
    "shell-gpt": {
      "command": "alacritty --class alacritty-dropterm",
      "animation": "fromTop",
      "lazy": true,
      "size": "50% 50%"
    },
    "chromium-gpt": {
      "command": "chromium --app=https://bard.google.com/chat",
      "animation": "fromTop",
      "lazy": true,
      "size": "50% 50%"
    },
    "gptbing": {
      "command": "flatpak run com.microsoft.Edge --app='https://www.bing.com/search?form=NTPCHB&q=Bing+AI&showconv=1'",
      "animation": "fromTop",
      "lazy": true,
      "class": "Microsoft-edge",
      "margin": 70,
      "size": "50% 50%"
    },
    "drop-term": {
      "command": "alacritty --class alacritty-dropterm",
      "animation": "fromBottom",
      "lazy": true,
      "unfocus": "hide"
    },
    "file-explorer": {
      "command": "alacritty --class alacritty-explorer --command zsh -ic 'rangercd; exec zsh'",
      "animation": "fromBottom",
      "lazy": true,
      "unfocus": "hide"
    },
    "telegram": {
      "command": "telegram-desktop",
      "lazy": true,
      "size": "50% 60%",
      "class": "Microsoft-edge"
    },
    "volume": {
      "command": "pavucontrol",
      "lazy": true,
      "animation": "fromRight"
    }
  },
  "monitors": {
    "placement": {
      "LG ULTRAGEAR": {
        "topOf": "DP-1"
      }
    },
    "unknown": "wlrlui"
  }
}
